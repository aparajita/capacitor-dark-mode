{
  "name": "@aparajita/capacitor-dark-mode",
  "version": "6.0.0",
  "description": "Universal dark mode support for Ionic web and native apps",
  "author": "Aparajita Fishman",
  "license": "MIT",
  "type": "module",
  "main": "dist/plugin.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/plugin.cjs",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "*.podspec",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write --cache --log-level error \"**/*.{js,cjs,mjs,ts,vue,md,json,css}\"",
    "lint.oxlint": "oxlint --config=oxlint.config.jsonc --deny-warnings --fix",
    "lint.eslint": "eslint --cache --fix \"**/*.{js,cjs,mjs,ts,vue}\"",
    "lint.tsc": "vue-tsc --noEmit --skipLibCheck",
    "lint.swift": "swiftly --fix ios/Plugin/**/*.swift && swiftly --fix demo/ios/App/App/**/*.swift",
    "lint": "pnpm format && pnpm lint.oxlint && pnpm lint.eslint && pnpm lint.tsc && pnpm lint.swift",
    "prebuilder": "pnpm clean",
    "builder": "vue-tsc ${SOURCE_MAP:-} && rollup -c rollup.config.mjs",
    "prebuild": "pnpm lint",
    "build": "pnpm builder",
    "build.dev": "SOURCE_MAP=--sourceMap pnpm build",
    "watch": "nodemon --exec 'pnpm build.dev'",
    "open.ios": "open ios/Plugin.xcworkspace",
    "open.android": "open -b com.google.android.studio android",
    "demo.dev": "pnpm --filter @aparajita/capacitor-dark-mode-demo dev",
    "demo.build": "pnpm --filter @aparajita/capacitor-dark-mode-demo build",
    "demo.ios": "pnpm build && pnpm --filter @aparajita/capacitor-dark-mode-demo ios",
    "demo.ios.dev": "pnpm --filter @aparajita/capacitor-dark-mode-demo ios.dev",
    "demo.android": "pnpm build && pnpm --filter @aparajita/capacitor-dark-mode-demo android",
    "demo.android.dev": "pnpm --filter @aparajita/capacitor-dark-mode-demo android.dev",
    "prerelease": "pnpm build",
    "tag": "commit-and-tag-version",
    "tag.preview": "pnpm tag --dry-run",
    "release": "./scripts/release.sh"
  },
  "commit-and-tag-version": {
    "scripts": {
      "postbump": "pnpm builder"
    },
    "bumpFiles": [
      "package.json",
      "demo/package.json",
      {
        "filename": "android/build.gradle",
        "updater": "scripts/gradle-updater.mjs"
      }
    ]
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "dark",
    "dark-mode"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "swiftlint": "@ionic/swiftlint-config",
  "prettier": "@aparajita/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/aparajita/capacitor-dark-mode.git"
  },
  "bugs": {
    "url": "https://github.com/aparajita/capacitor-dark-mode/issues"
  },
  "devDependencies": {
    "@aparajita/prettier-config": "^2.0.0",
    "@aparajita/swiftly": "^2.0.0",
    "@capacitor/cli": "^7.4.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.38.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/node": "^24.9.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "commit-and-tag-version": "^12.6.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "^1.24.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "neostandard": "^0.12.2",
    "nodemon": "^3.1.10",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "simple-git-hooks": "^2.13.1",
    "swiftlint": "^2.0.0",
    "typescript": "~5.9.3",
    "vue-tsc": "~3.1.2"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/status-bar": "^7.0.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "swiftlint",
      "unrs-resolver"
    ]
  }
}
